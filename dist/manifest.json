{
  "applications": {
    "gecko": {
      "id": "hestia@codegalley.io",
      "strict_min_version": "42.0"
    }
  },
  "author": "CodeGalley",
  "background": {
    "scripts": ["background/background.js"]
  },
  "manifest_version": 2,
  "name": "Living Room Tab",
  "version": "0.4.0",
  "description": "A customizable new tab extension. You can choose what links to show and how it looks with resizable categories and custom CSS (WIP).",
  "icons": {
    "32": "resources/icon-32.png",
    "64": "resources/icon-64.png",
    "128": "resources/icon-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net/; object-src 'self'",
  "chrome_url_overrides": {
    "newtab": "new_tab/new_tab.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage"]
}
